利用<algorithm>中的reverse()函数

#include <algorithm>
class Solution {
public:
    vector<vector<int>> flipAndInvertImage(vector<vector<int>>& A) {
        int size = A.size();    //多少行
        int n = A[0].size();    //多少列
        for (int i = 0; i < size; i++) {
            reverse(A[i].begin(), A[i].end());
        }
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < n; j++) {
                A[i][j] = 1 - A[i][j];
            }
        }
        return A;
    }
};
