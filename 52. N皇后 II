class Solution {
public:
    int totalNQueens(int n) {
        int result=0;
        vector<int> x(n,0);
        queen(n,0,x,result);
        return result;
    }
    void queen(int n,int line,vector<int> &x,int &result)
    {
        int flag;
        if(line==n)
        {
            result++;
            return;
        }
        for(int i=0;i<n;i++)
        {
            flag = 1;
            for(int j=0;j<line;j++)
                if(x[j]==i||abs(x[j]-i)==abs(j-line))
                {flag=0;break;}
            if(flag)
            {
                x[line] = i;
                queen(n,line+1,x,result);
            }
        }
    }
};
